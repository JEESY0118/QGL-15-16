<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="off">

    <Appenders>
        <Console name="stdout">
            <PatternLayout>
                <Pattern>[%p] %c:%m%n</Pattern>
            </PatternLayout>
        </Console>
    </Appenders>

   <Loggers>
        <Logger name="eu.ace_design.Island" level="off" additivity="false">
            <AppenderRef ref="stdout"/>
        </Logger>
        <Logger name="eu.ace_design.Island/Mesh" level="off" additivity="false">
            <AppenderRef ref="stdout"/>
        </Logger>
        <Logger name="eu.ace_design.Island/Map" level="off" additivity="false">
            <AppenderRef ref="stdout"/>
        </Logger>
        <Logger name="eu.ace_design.Island/Viewer" level="off" additivity="false">
            <AppenderRef ref="stdout"/>
        </Logger>
        <Logger name="eu.ace_design.Island/Board" level="off" additivity="false">
            <AppenderRef ref="stdout"/>
        </Logger>
       <Root level="off">
           <AppenderRef ref="stdout" />
       </Root>
   </Loggers>

</Configuration>